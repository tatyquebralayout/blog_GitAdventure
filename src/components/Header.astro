---
import { getCollection } from "astro:content";
---

<header class="site-header">
  <div class="header-container">
    <a href="/blog_GitAdventure/" class="logo">
      <img
        src="/blog_GitAdventure/images/logo.png"
        alt="Logo Git Aventuras"
        class="logo-image"
      />
    </a>

    <nav>
      <button class="mobile-menu-toggle" aria-label="Alternar menu">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>

      <ul class="nav-links">
        <li><a href="/blog_GitAdventure/">Home</a></li>
        <li><a href="/blog_GitAdventure/blog">Blog</a></li>
        <li><a href="/blog_GitAdventure/palette">Cores</a></li>
        <li><a href="/blog_GitAdventure/about">Sobre</a></li>
      </ul>
    </nav>
  </div>
</header>

<script>
  // Funcionalidade de toggle para o menu mobile
  const mobileMenuToggle = document.querySelector(".mobile-menu-toggle");
  const navLinksElement = document.querySelector(".nav-links");

  if (mobileMenuToggle && navLinksElement) {
    mobileMenuToggle.addEventListener("click", () => {
      navLinksElement.classList.toggle("show");
    });
  }

  // Fechar menu ao clicar fora
  document.addEventListener("click", (event) => {
    const isClickInside =
      navLinksElement?.contains(event.target as Node) ||
      mobileMenuToggle?.contains(event.target as Node);

    if (!isClickInside && navLinksElement?.classList.contains("show")) {
      navLinksElement.classList.remove("show");
    }
  });

  // Adicionar classe ativa ao link da pÃ¡gina atual
  const currentPath = window.location.pathname;
  const links = document.querySelectorAll(".nav-links a");

  links.forEach((link) => {
    const href = link.getAttribute("href");

    if (href) {
      if (
        href === currentPath ||
        (href !== "/blog_GitAdventure/" &&
          href !== "/" &&
          currentPath.startsWith(href))
      ) {
        link.classList.add("active");
      }
    }
  });
</script>

<style>
  .site-header {
    background-color: var(--preto-profundo);
    border-bottom: 1px solid var(--cinza-aco-fosco);
    position: sticky;
    top: 0;
    z-index: 100;
    transition:
      background-color 0.3s ease,
      box-shadow 0.3s ease;
    padding: 0.8rem 0;
  }

  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.5rem 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    transition: transform 0.2s ease;
    padding: 0.4rem;
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: 6px;
  }

  .logo-image {
    height: 60px;
    width: auto;
    object-fit: contain;
    transition: transform 0.3s ease;
  }

  .logo:hover {
    transform: scale(1.05);
    text-decoration: none;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    color: var(--branco-puro);
    font-weight: 500;
    transition:
      color 0.2s ease,
      transform 0.2s ease;
    position: relative;
    padding: 0.5rem 0;
  }

  .nav-links a:hover {
    color: var(--laranja-incandescente-claro);
    text-decoration: none;
    transform: translateY(-1px);
  }

  .nav-links a.active {
    color: var(--laranja-flamejante);
  }

  .nav-links a.active::after {
    content: "";
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: var(--laranja-flamejante);
    border-radius: 2px;
  }

  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    color: var(--branco-puro);
    cursor: pointer;
    padding: 0.5rem;
  }

  @media (max-width: 768px) {
    .mobile-menu-toggle {
      display: block;
    }

    .nav-links {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      flex-direction: column;
      background-color: var(--preto-profundo);
      padding: 1rem;
      gap: 1rem;
      border-bottom: 1px solid var(--cinza-aco-fosco);
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transform: translateY(-100%);
      opacity: 0;
      pointer-events: none;
      transition:
        transform 0.3s ease,
        opacity 0.3s ease;
      z-index: 10;
    }

    .nav-links.show {
      transform: translateY(0);
      opacity: 1;
      pointer-events: auto;
    }
  }

  /* Adicionar sombra ao rolar */
  .site-header.scrolled {
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
</style>

<script>
  // Adicionar sombra ao rolar
  const header = document.querySelector(".site-header");

  window.addEventListener("scroll", () => {
    if (window.scrollY > 10) {
      header?.classList.add("scrolled");
    } else {
      header?.classList.remove("scrolled");
    }
  });
</script>
