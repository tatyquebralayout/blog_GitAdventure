---
import { formatDate } from "../utils/date.js";
import ReadMore from "./ReadMore.astro";

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  url: string;
  heroImage?: string;
  tags?: string[];
}

const { title, description, pubDate, url, heroImage, tags = [] } = Astro.props;
const formattedDate = formatDate(pubDate);
---

<div class="post-card">
  {
    heroImage && (
      <a href={url} class="card-image-link">
        <img src={heroImage} alt={title} class="card-image" />
      </a>
    )
  }
  <div class="card-content">
    <div class="card-meta">
      <time datetime={pubDate.toISOString()}>{formattedDate}</time>
      {
        tags.length > 0 && (
          <div class="card-tags">
            {tags.slice(0, 2).map((tag) => (
              <a href={`/tags/${tag}`} class="tag">
                {tag}
              </a>
            ))}
          </div>
        )
      }
    </div>
    <h3 class="card-title">
      <a href={url}>{title}</a>
    </h3>
    <p class="card-description">{description}</p>
    <div class="card-footer">
      <ReadMore href={url} />
    </div>
  </div>
</div>

<style>
  .post-card {
    background-color: var(--branco-puro);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
  }

  .card-image-link {
    display: block;
    position: relative;
    overflow: hidden;
    padding-top: 56.25%; /* 16:9 Aspect Ratio */
  }

  .card-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .post-card:hover .card-image {
    transform: scale(1.05);
  }

  .card-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
    font-size: 0.85rem;
    color: var(--cinza-aco-fosco);
  }

  .card-tags {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    display: inline-block;
    padding: 0.2rem 0.5rem;
    background-color: var(--verde-musgo-queimado);
    color: var(--branco-puro);
    font-size: 0.75rem;
    border-radius: 4px;
    transition: background-color 0.2s ease;
  }

  .tag:hover {
    background-color: var(--dourado-cibernetico);
    color: var(--preto-profundo);
    text-decoration: none;
  }

  .card-title {
    font-size: 1.4rem;
    margin: 0 0 0.75rem;
    line-height: 1.3;
  }

  .card-title a {
    color: var(--preto-profundo);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .card-title a:hover {
    color: var(--laranja-flamejante);
  }

  .card-description {
    color: var(--cinza-aco-fosco);
    font-size: 0.95rem;
    line-height: 1.5;
    margin: 0 0 1.5rem;
    flex: 1;
  }

  .card-footer {
    margin-top: auto;
  }
</style>
