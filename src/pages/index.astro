<script>
  // Anima√ß√£o sequencial para os cards de post
  const postCards = document.querySelectorAll(".post-card");

  postCards.forEach((card, index) => {
    const delay = 100 + index * 100;
    (card as HTMLElement).style.animationDelay = `${delay}ms`;
  });

  // Controle da galeria de imagens
  document.addEventListener("DOMContentLoaded", () => {
    const gallerySlides = document.querySelectorAll(".gallery-slide");
    const galleryDots = document.querySelectorAll(".gallery-dot");
    const galleryThumbs = document.querySelectorAll(".gallery-thumb");
    const galleryPrevBtn = document.querySelector(
      ".gallery-prev"
    ) as HTMLButtonElement;
    const galleryNextBtn = document.querySelector(
      ".gallery-next"
    ) as HTMLButtonElement;

    if (gallerySlides.length === 0) return;

    let currentGallerySlide = 0;
    const totalGallerySlides = gallerySlides.length;

    // Fun√ß√£o para mostrar um slide espec√≠fico
    function showGallerySlide(index: number) {
      // Garante que o √≠ndice esteja dentro dos limites
      if (index < 0) index = totalGallerySlides - 1;
      if (index >= totalGallerySlides) index = 0;

      // Atualiza o slide atual
      currentGallerySlide = index;

      // Remove classes ativas de todos os elementos
      gallerySlides.forEach((slide) => slide.classList.remove("active"));
      galleryDots.forEach((dot) => dot.classList.remove("active"));
      galleryThumbs.forEach((thumb) => thumb.classList.remove("active"));

      // Adiciona classe ativa aos elementos do slide atual
      gallerySlides[currentGallerySlide].classList.add("active");
      // Verifica se o ponto/thumb existe antes de adicionar a classe
      if (galleryDots[currentGallerySlide]) {
        galleryDots[currentGallerySlide].classList.add("active");
      }
      if (galleryThumbs[currentGallerySlide]) {
        galleryThumbs[currentGallerySlide].classList.add("active");
      }
    }

    // Evento para o bot√£o anterior
    if (galleryPrevBtn) {
      galleryPrevBtn.addEventListener("click", () => {
        showGallerySlide(currentGallerySlide - 1);
      });
    }

    // Evento para o bot√£o pr√≥ximo
    if (galleryNextBtn) {
      galleryNextBtn.addEventListener("click", () => {
        showGallerySlide(currentGallerySlide + 1);
      });
    }

    // Eventos para os pontos indicadores
    galleryDots.forEach((dot, index) => {
      dot.addEventListener("click", () => {
        showGallerySlide(index);
      });
    });

    // Eventos para as miniaturas
    galleryThumbs.forEach((thumb, index) => {
      thumb.addEventListener("click", () => {
        showGallerySlide(index);
      });
    });

    // Inicializa o primeiro slide
    showGallerySlide(0);

    // Navega√ß√£o autom√°tica opcional (descomente para ativar)
    // setInterval(() => {
    //   showGallerySlide(currentGallerySlide + 1);
    // }, 5000);
  });
</script>

