---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Me">
  <div class="contact-page container">
    <header class="page-header slide-up">
      <h1>Get in Touch</h1>
      <p>Have a question or just want to say hi? I'd love to hear from you.</p>
    </header>
    
    <div class="contact-content">
      <div class="contact-info">
        <div class="contact-method">
          <h3>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
            Email
          </h3>
          <p><a href="mailto:your.email@example.com">your.email@example.com</a></p>
        </div>
        
        <div class="contact-method">
          <h3>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path></svg>
            Twitter
          </h3>
          <p><a href="https://twitter.com/yourusername" target="_blank" rel="noopener">@yourusername</a></p>
        </div>
        
        <div class="contact-method">
          <h3>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect x="2" y="9" width="4" height="12"></rect><circle cx="4" cy="4" r="2"></circle></svg>
            LinkedIn
          </h3>
          <p><a href="https://linkedin.com/in/yourusername" target="_blank" rel="noopener">linkedin.com/in/yourusername</a></p>
        </div>
      </div>
      
      <div class="contact-form-container">
        <form class="contact-form" id="contact-form">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" required />
          </div>
          
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required />
          </div>
          
          <div class="form-group">
            <label for="subject">Subject</label>
            <input type="text" id="subject" name="subject" required />
          </div>
          
          <div class="form-group">
            <label for="message">Message</label>
            <textarea id="message" name="message" rows="5" required></textarea>
          </div>
          
          <button type="submit" class="btn">Send Message</button>
        </form>
      </div>
    </div>
  </div>
</Layout>

<style>
  .contact-page {
    padding: var(--size-8) 0;
  }
  
  .page-header {
    text-align: center;
    margin-bottom: var(--size-10);
  }
  
  .page-header h1 {
    font-size: var(--size-12);
    margin-bottom: var(--size-3);
  }
  
  .page-header p {
    font-size: var(--size-5);
    color: var(--color-text-light);
    max-width: 600px;
    margin: 0 auto;
  }
  
  .contact-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--size-8);
    max-width: 1000px;
    margin: 0 auto;
  }
  
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--size-6);
  }
  
  .contact-method h3 {
    display: flex;
    align-items: center;
    gap: var(--size-2);
    margin: 0 0 var(--size-2) 0;
    color: var(--color-primary);
  }
  
  .contact-method p {
    margin: 0;
  }
  
  .contact-form-container {
    background-color: var(--color-background-alt);
    border-radius: var(--radius-lg);
    padding: var(--size-6);
  }
  
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--size-4);
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--size-2);
  }
  
  .form-group label {
    font-weight: 500;
    font-size: var(--size-3);
  }
  
  .form-group input,
  .form-group textarea {
    padding: var(--size-3);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background-color: var(--color-background);
    font-size: var(--size-4);
    transition: border-color var(--transition-fast);
  }
  
  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-primary);
  }
  
  .contact-form .btn {
    align-self: flex-start;
    margin-top: var(--size-2);
    padding: var(--size-3) var(--size-6);
  }
  
  @media (max-width: 768px) {
    .contact-content {
      grid-template-columns: 1fr;
      gap: var(--size-6);
    }
    
    .page-header h1 {
      font-size: var(--size-8);
    }
    
    .page-header p {
      font-size: var(--size-4);
    }
    
    .contact-form .btn {
      width: 100%;
    }
  }
</style>

<script>
  // Form submission handling
  const form = document.getElementById('contact-form');
  
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    
    // In a real implementation, you would send this data to your backend
    // For this example, just show a success message
    
    const formData = new FormData(e.target as HTMLFormElement);
    const formValues = Object.fromEntries(formData.entries());
    
    // Replace form with success message
    const formContainer = document.querySelector('.contact-form-container');
    if (formContainer) {
      formContainer.innerHTML = `
        <div class="success-message fade-in">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22 4 12 14.01 9 11.01"></polyline>
          </svg>
          <h3>Message Sent!</h3>
          <p>Thank you for reaching out. I'll get back to you as soon as possible.</p>
        </div>
      `;
    }
  });
</script>

<style>
  .success-message {
    text-align: center;
    padding: var(--size-6);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--size-4);
  }
  
  .success-message svg {
    color: var(--color-success);
  }
  
  .success-message h3 {
    font-size: var(--size-6);
    margin: 0;
  }
  
  .success-message p {
    color: var(--color-text-light);
  }
</style>